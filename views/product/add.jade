extends ../admin

block right
  div(class='container')    
    h1 
      = 'Add a new Product'
    div(class='row')
      div(class='col-md-8')
        form(class='form-block', role='form', action="/product/add", method="post")
          div(class='form-group #{errors && errors.name ? "has-error": ""}')
            label(for='name', class='control-label') Product title #{errors && errors.title ? "(" + errors.title + ")" : ""}
            input(type='text', class='form-control', name='title', id='title', placeholder='Enter product title', value='#{fields && fields.title ? fields.title : ""}')
          div(class='form-group #{errors && errors.text ? "has-error": ""}')
            label(for='text', class='control-label') Description #{errors && errors.text ? "(" + errors.text + ")" : ""}
            input(type='text', class='form-control', name='text', id='text', placeholder='Enter description', value='#{fields && fields.text ? fields.text : ""}')
          div(class='form-group #{errors && errors.author ? "has-error": ""}')
            label(for='path', class='control-label') Author/Producer #{errors && errors.author ? "(" + errors.author + ")" : ""}
            input(type='text', class='form-control', name='path', id='path', placeholder='Enter product author/producer', value='#{fields && fields.author ? fields.author : ""}')
          div(class='form-group #{errors && errors.category ? "has-error": ""}')
            label(for='category', class='control-label') Category path #{errors && errors.category ? "(" + errors.category + ")" : ""}
            input(type='text', class='form-control', name='category', id='category', placeholder='Enter category path', value='#{fields && fields.category ? fields.category : ""}')
          button(type='sumbit', class='btn btn-default') Add
    div(class='col-md-4')

