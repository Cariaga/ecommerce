extends layout

block content
  div(class='container')
    div(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
      div(class="navbar-form navbar-right", role="home")
        a(href="../navbar-fixed-top/", class='glyphicon glyphicon-shopping-cart white')
      a(class="navbar-brand", href="/") Mongo eCommerce
      form(class="navbar-form navbar-right", role="search", method='post', action='/search')
        div(class="form-group")
          input(type="text", class="form-control", placeholder="Search", name='search', id='search', value="#{search ? search : ''}")
        button(type="submit", class="btn btn-default")
          span(class="glyphicon glyphicon-search")

  div(class='container')
    ol(class="breadcrumb")
      each elem in path.root.split()
        li
          a(href='/index/#{elem}') #{elem.capitalize()}    
  
  div(class='row')
    div(class='col-md-2')
      block left
    div(class='col-md-10')
      block right