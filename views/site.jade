extends layout

block content
  div(class='container')
    div(class="navbar navbar-inverse navbar-fixed-top", role="navigation")
      a(class="navbar-brand", href="/") Mongo eCommerce

  div(class='container')
    ol(class="breadcrumb")
      each elem in path.root.split()
        li
          a(href='/index/#{elem}') #{elem.capitalize()}    
  
  div(class='row')
    div(class='col-md-2')
      block left
    div(class='col-md-10')
      block right